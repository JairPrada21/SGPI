@model Usuario
@{
    ViewData["Title"] = "ActualizarEstudiante";
    Layout = "_LayoutSGPI";
}

<div class="container">
    <nav class="topnavA">
        <a class="active" href="~/Estudiante/ActualizarEstudiante">Actualizar Estudiante</a>
        <a href="~/Estudiante/PagosEstudiante">Pagos</a>
        <form action="../Administrador/Login">
            <button class="btnLogUpE">Cerrar Sesión</button>
        </form>

    </nav>
    <div class="cuacenter">
        <div class="bus">
            <form method="post">
                <div class="cont1">
                    <div class="row">
                        <div class="col-md-3">
                            <label for="identificacion">Tipo Identificación</label>
                            @Html.DropDownList("IdDoc", new SelectList(ViewBag.documento, "IdDoc", "TipoDocumento"), new {@class="form-control dropdown"})
                        </div>
                        <div class="col-md-3">
                            <label for="name">Primer Nombre</label>
                            <input asp-for="PrimerNombre" type="text" />
                        </div>
                        <div class="col-md-3">
                            <label for="name">Segundo Nombre</label>
                            <input asp-for="SegundoNombre" type="text" />
                        </div>
                        <div class="col-md-3">
                            <label for="priApel">Primer Apellido</label>
                            <input asp-for="PrimerApellido" type="text" />
                        </div>
                    </div>
                </div>
                <div class="cont1">
                    <div class="row">
                        <div class="col-md-4">
                            <label for="segApel">Segundo Apellido</label>
                            <input asp-for="SegundoApellido" type="text" />
                        </div>
                        <div class="col-md-4">
                            <label for="doc">Número de Documento</label>
                            <input asp-for="NumeroDocumento" type="text" />
                        </div>
                        <div class="col-md-4">
                            <label for="email">Correo Electrónico</label>
                            <input asp-for="Email" type="email" />
                        </div>
                    </div>
                </div>
                <div class="cont1">
                    <div class="row">
                        <div class="col-md-4">
                            <label for="rol">Rol Usuario</label>
                             @Html.DropDownList("IdRol", new SelectList(ViewBag.rol, "IdRol", "Rol1"), new {@class="form-control dropdown"})
                        </div>
                        <div class="col-md-4">
                            <label for="genero">Genero</label>
                            @Html.DropDownList("IdGenero", new SelectList(ViewBag.genero, "IdGenero", "Genero1"), new {@class="form-control dropdown"})
                        </div>
                        <div class="col-md-4">
                            <label for="pass">Contraseña</label>
                            <input asp-for="Password" type="text" />
                        </div>
                    </div>
                </div>
                <div class="cont1">
                    <div class="row">
                        <div class="col-md-6">
                            <label for="programa">Programa</label>
                            @Html.DropDownList("IdPrograma", new SelectList(ViewBag.programa, "IdPrograma", "Programa1"), new {@class="form-control dropdown"})
                        </div>
                        <div class="col-md-6">
                            <label for="cert">Certificado Electoral</label>
                            <input type="file" />
                        </div>
                    </div>
                </div>
                <div class="btnsAc">
                    <button class="btnCS">Actualizar</button>
                </div>
            </form>
        </div>
    </div>



</div>





